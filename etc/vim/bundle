" vim:se ft=vim:

packadd vim-jetpack
call jetpack#begin()
Jetpack 'tani/vim-jetpack', {'opt': 1} "bootstrap

if has('nvim')
    Jetpack 'nvim-tree/nvim-web-devicons'
    Jetpack 'nvim-tree/nvim-tree.lua'
else
    Jetpack 'scrooloose/nerdtree'
    Jetpack 'scrooloose/nerdcommenter'
endif

" indent
Jetpack 'nathanaelkane/vim-indent-guides'

" text/completion
Jetpack 'lambdalisue/kensaku.vim'
Jetpack 'rbtnn/vim-ambiwidth'
Jetpack 'sheerun/vim-polyglot'

" reStructuredText
Jetpack 'Rykka/riv.vim', {'for': ['rst']}

" Python
Jetpack 'nvie/vim-flake8', {'for':  ['python']}
Jetpack 'keitheis/vim-plim', {'for':  ['plim']}

" JavaScript
Jetpack 'jelera/vim-javascript-syntax', {'for':  ['javascript']}
Jetpack 'jason0x43/vim-js-indent', {'for':  ['javascript', 'typescript']}

" Jinja2
Jetpack 'Glench/Vim-Jinja2-Syntax', {'for':  ['jinja']}

" TypeScript
Jetpack 'leafgarland/typescript-vim', {'for':  ['typescript']}

" CoffeeScript
Jetpack 'kchmck/vim-coffee-script', {'for':  ['coffee']}

" Erlang
Jetpack 'oscarh/vimerl', {'for':  ['erlang']}

" ps1 / PowerShell
Jetpack 'PProvost/vim-ps1', {'for':  ['ps1']}

" Golang
Jetpack 'fatih/vim-go', {'for':  ['go']}

" Kotlin
Jetpack 'udalov/kotlin-vim', {'for':  ['kotlin']}

" colo
Jetpack 'tomasr/molokai'
Jetpack 'altercation/vim-colors-solarized'

call jetpack#end()
